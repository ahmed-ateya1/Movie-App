@model MovieUpdateRequest
@{
    ViewBag.Title = "Edit";
}
<h2 class="display-4">Edit Movie</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Movie" method="post" enctype="multipart/form-data" asp-route-movieID="@Model.MovieID">
            <div class="form-group mt-2 w-75">
                <label asp-for="Title" class="form-label font-monospace">Title:</label>
                <input asp-for="Title" class="form-control" maxlength="100" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 w-75">
                <label asp-for="GenreID" class="form-label font-monospace">Genre: </label>
                <select asp-for="GenreID" asp-items="ViewBag.Genres" class="form-select" required>
                    <option value="">--Select Genre--</option>
                </select>
                <span asp-validation-for="GenreID" class="text-danger"></span>
            </div>
            <div class="form-group w-50 mt-2">
                <label asp-for="ReleaseDate" class="form-label font-monospace" class="form-label">Release Date: </label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 w-25">
                <label asp-for="Rating" class="form-label font-monospace">Rate: </label>
                <input asp-for="Rating" class="form-control" min="1" max="10" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-floating w-75 mt-2">
                <textarea asp-for="Description" class="form-control" placeholder="Leave a StoryLine Here" id="floatingTextarea2" style="height: 100px" maxlength="1000"></textarea>
                <label asp-for="Description" for="floatingTextarea2">StoryLine</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-2 w-75 mb-3">
                <label asp-for="Poster" class="form-label font-monospace">Poster: </label>
                <input asp-for="Poster" type="file" class="form-control" id="imageInput" accept=".jpg, .png" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">
                <i class="bi bi-check"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-warning mt-2">
                <i class="bi bi-x"></i>
                Cancel
            </a>
        </form>
    </div>
    <div class="col-md-6">
        <div id="posterImg" class="@String.Empty">
            <img src="/Upload/@Model.ImageURL" alt="" class="img-thumbnail" id="posterImage">
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script>
        $(document).ready(function () {
            $('#imageInput').on('change', function () {
                var file = this.files[0];
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#posterImg').removeClass('d-none');
                    $('#posterImage').attr('src', e.target.result);
                }

                reader.readAsDataURL(file);
            });
        });
    </script>
}

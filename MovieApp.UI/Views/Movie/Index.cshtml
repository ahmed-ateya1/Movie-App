@using Microsoft.AspNetCore.Identity
@using MovieApp.Core.Domain.IdentityEntites
@using MovieApp.Core.ServicesContracts
@model IEnumerable<MovieResponse>
@inject IMovieFavouriteServices _movieFavouriteService
@inject UserManager<ApplicationUser> _userManager;
@{
    ViewData["Title"] = "Index";
    string searchString = ViewBag.currentSearchString as string;
    string currentSortBy = ViewBag.currentSortBy as string;
    string currentSorted = ViewBag.currentSorted as string;
    var user = await _userManager.GetUserAsync(User);
}

<h2>
    <i class="bi bi-film"></i>
    Movies
</h2>
<hr />
<form asp-action="Index" asp-controller="Movie" method="get">
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="input-group mb-3">
                    <input name="searchString" value="@searchString" type="text" class="form-control" placeholder="Search for movies..." aria-label="Search for movies" aria-describedby="button-search">
                    <button class="btn btn-primary" type="submit" id="button-search">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-3">
        @if(User.IsInRole("ADMIN"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i>
                Add Movie
            </a>
        }
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="input-group mb-3">
                    <select name="sortBy" class="form-select" aria-label="Order by" id="order-by-select">
                        @foreach (var select in ViewBag.sortByList)
                        {
                            if (select.Value == currentSortBy)
                            {
                                <option value="@select.Value" selected>@select.Text</option>
                            }
                            else
                            {
                                <option value="@select.Value">@select.Text</option>
                            }
                        }
                    </select>
                    <input type="hidden" name="sorted" value="@(currentSorted == "ASC" ? "DESC" : "ASC")" />
                    <button class="btn btn-primary" type="submit" id="order-by-button">
                        <i class="bi bi-arrow-down-up"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @if (!Model.Any())
        {
            <div class="alert alert-warning" role="alert">
                No Movie Found
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
                @foreach (var movie in Model)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="/Upload/@movie.ImageURL" class="card-img-top movie-image" alt="Movie Poster">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text">@movie.Description.Substring(0, Math.Min(movie.Description.Length, 100))...</p>
                            </div>
                            <div class="card-footer bg-transparent border-top-0">
                                <div class="d-flex flex-column">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-star-fill text-warning me-1"></i>
                                            <small class="text-muted">@movie.Rating?.ToString("0.0")</small>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-wrap justify-content-between btn-group" role="group" aria-label="Movie Actions">
                                        <a asp-action="Details" asp-route-MovieID="@movie.MovieID" class="btn btn-primary btn-sm flex-fill me-1 mb-1">
                                            <i class="bi bi-info-circle-fill"></i>
                                            Details
                                        </a>
                                        @if(User.IsInRole(nameof(UserOption.ADMIN)))
                                        {
                                            <a asp-action="Edit" asp-route-MovieID="@movie.MovieID" class="btn btn-warning btn-sm flex-fill me-1 mb-1">
                                                <i class="bi bi-pencil-fill"></i>
                                                Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-MovieID="@movie.MovieID" class="btn btn-danger btn-sm flex-fill me-1 mb-1" onclick="return confirm('Are You Sure')">
                                                <i class="bi bi-trash-fill"></i>
                                                Delete
                                            </a>
                                        }
                                        @if(User.Identity.IsAuthenticated)
                                        {
                                            @if (!await _movieFavouriteService.IsMovieInUserFavourites(movie.MovieID, user.Id))
                                            {
                                                <form asp-action="AddMovieToUser" asp-controller="MovieFavourite" method="get" class="d-inline">
                                                    <input type="hidden" name="movieID" value="@movie.MovieID" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm flex-fill mb-1">
                                                        <i class="bi bi-heart"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="RemoveMovieFromUser" asp-controller="MovieFavourite" method="get" class="d-inline">
                                                    <input type="hidden" name="movieID" value="@movie.MovieID" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm flex-fill mb-1">
                                                        <img src="./Images/heart.png" width="25px" height="25px" />
                                                    </button>
                                                </form>
                                            }
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</form>

<style>
    /* Custom styles for the search bar */
    .input-group .form-control {
        border-right: 0;
        box-shadow: none;
    }

    .input-group .btn {
        border-left: 0;
    }

    .input-group .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .input-group .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .input-group .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .movie-image {
        height: 350px;
        background-size: cover;
    }

    #order-by-select {
        flex: 1 1 auto;
    }

    #order-by-button {
        width: auto;
    }
</style>
